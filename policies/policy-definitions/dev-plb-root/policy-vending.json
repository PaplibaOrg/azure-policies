{
  "displayName": "Require Environment Tag",
  "policyType": "Custom",
  "mode": "All",
  "description": "Ensures all resources have an environment tag",
  "metadata": {
    "category": "Tags",
    "version": "1.0.0"
  },
  "parameters": {},
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions/resourceGroups"
        },
        {
          "field": "tags.environment",
          "exists": false
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  }
}
