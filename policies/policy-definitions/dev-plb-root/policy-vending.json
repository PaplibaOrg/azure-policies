{
  "displayName": "Enforce Subscription Name Format",
  "policyType": "Custom",
  "mode": "All",
  "description": "Ensures all subscriptions follow the naming convention: plb-<application-name>-dev/test/prod-<sequence> where sequence is exactly 3 digits",
  "metadata": {
    "category": "Naming",
    "version": "1.0.0"
  },
  "parameters": {},
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions"
        },
        {
          "field": "name",
          "not": {
            "match": "^plb-[a-zA-Z0-9_-]+-(dev|test|prod)-[0-9]{3}$"
          }
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  }
}
